<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:DevSuperPowersDemo.ViewModels;assembly=DevSuperPowersDemo"
             x:Class="DevSuperPowersDemo.Views.BetterView"
             Title="Better">
  <ContentPage.BindingContext>
    <viewModels:BetterViewModel/>
  </ContentPage.BindingContext>
  
  <StackLayout VerticalOptions="Center">
    <Label Text="{Binding GetCoordsLabel}" VerticalOptions="Center" HorizontalOptions="Center" />
    <Button Text="Get coords" Command="{Binding GetCoords}"/>
  </StackLayout>
</ContentPage>